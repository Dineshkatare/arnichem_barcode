<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Customer Code -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customer Code"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:background="@drawable/editbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customer Code Value"
        android:id="@+id/tvCustCode" />

    <!-- Contact Details -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Details"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:gravity="center" />

    <!-- Name -->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="0.28"
            android:layout_height="wrap_content"
            android:text="Name" />

        <EditText
            android:id="@+id/cust_name_tv"
            android:background="@drawable/editbox"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:padding="5dp"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:layout_height="wrap_content"
            android:hint="Enter Name" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="0.09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Designation" />

        <Spinner
            android:background="@drawable/editbox"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerDesignation"
            android:entries="@array/designations" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.45"
            android:layout_height="wrap_content"
            android:text="Mobile No" />

        <EditText
            android:id="@+id/mobile_et"
            android:background="@drawable/editbox"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:padding="5dp"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:layout_height="wrap_content"
            android:hint="Enter Mobile No: " />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.45"
            android:layout_height="wrap_content"
            android:text="Phone No" />

        <EditText
            android:id="@+id/phone_no_et"
            android:background="@drawable/editbox"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:padding="5dp"
            android:paddingStart="10dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Enter Phone No" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:maxLines="2"
            android:layout_weight="0.45"
            android:layout_height="wrap_content"
            android:text="Email Address " />

        <EditText
            android:id="@+id/email_et"
            android:background="@drawable/editbox"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:padding="5dp"
            android:paddingStart="10dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Enter Email Address" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.45"
            android:layout_height="wrap_content"
            android:text="Remarks" />

        <EditText
            android:id="@+id/remarks_et"
            android:background="@drawable/editbox"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:padding="5dp"
            android:paddingStart="10dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Enter Remarks" />

    </LinearLayout>
    <Button
        android:id="@+id/save_customer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corner"
        android:text="Save"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corner"
        android:text="Cancel"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <!-- Designation -->

</LinearLayout>
