<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/gasTypeTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="GasType"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/fullEmpLinear"
        app:layout_constraintEnd_toStartOf="@+id/fullEmpLinear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:id="@+id/fullEmpLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/gasTypeTxt"
        >
    <TextView
        android:id="@+id/fullEdt"
        android:layout_width="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:inputType="numberSigned"
        android:hint="0"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
      ></TextView>


    <TextView
        android:id="@+id/empEdt"
        android:layout_width="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="0"
        android:textAlignment="center"
        android:gravity="center"
        android:inputType="numberSigned"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fullEdt"
        app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>