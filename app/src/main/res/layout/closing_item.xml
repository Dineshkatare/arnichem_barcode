<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
android:layout_height="wrap_content">

    <TextView
        android:id="@+id/gasTypeTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="GasType"
        android:padding="3dp"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fullEdt"
        android:background="@drawable/rounded_bg"
        app:layout_constraintBottom_toBottomOf="parent"
       />

        <EditText
            android:id="@+id/fullEdt"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:padding="3dp"
            android:nextFocusForward="@+id/empEdt"
            android:imeOptions="actionNext"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/empEdt"
            android:background="@drawable/rounded_bg"
            android:gravity="center"
            android:hint="0"
            android:inputType="numberSigned|textNoSuggestions" />

    <EditText
        android:id="@+id/empEdt"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:padding="3dp"
        android:background="@drawable/rounded_bg"
        android:gravity="center"
        android:nextFocusDown="@+id/fullEdt"
        android:hint="0"
        android:imeOptions="actionNext"
        android:inputType="numberSigned|textNoSuggestions"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>