<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GodownView.GodownFullRecipt.FullReciptMain">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:scrollbars="none"
        >
        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/fildura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Godown FullReceipt"
                android:layout_marginBottom="20dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="center_horizontal" />
            <TextView
                android:id="@+id/usernametxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="UserName :"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                android:gravity="center_horizontal" />
            <TextView
                android:id="@+id/usernametxtvaluefullrecipt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=""
                android:background="@drawable/editbox"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                android:gravity="center_horizontal" />


            <TextView
                android:id="@+id/dateview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Date"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                android:gravity="center_horizontal" />
            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=""
                android:background="@drawable/editbox"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                android:gravity="center_horizontal" />


            <TextView
                android:id="@+id/spinfromtextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Location"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                android:gravity="center_horizontal" />
            <!--            <Spinner-->
            <!--                android:id="@+id/spinfrom"-->
            <!--                android:layout_width="250dp"-->
            <!--                android:layout_gravity="center"-->
            <!--                android:textAlignment="center"-->
            <!--                android:background="@drawable/editbox"-->
            <!--                android:layout_marginTop="15dp"-->
            <!--                android:layout_height="wrap_content" />-->
            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/spinlocgodownfullrecipt"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:background="@drawable/editbox"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/custnamespintxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Customer Name"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                android:gravity="center_horizontal" />
            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/custnamespingodownfullrecipt"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:background="@drawable/editbox"
                android:layout_height="wrap_content" />

            <AutoCompleteTextView
                android:id="@+id/godownfullrecptcylinder"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="2dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="सिलेंडर नंबर टाका "
                android:textAlignment="center"
                android:inputType="textVisiblePassword"
                android:background="@drawable/editbox"
                />



            <!--    <TextView-->
            <!--        android:id="@+id/resdingtype"-->
            <!--        android:layout_width="match_parent"-->
            <!--        android:layout_height="wrap_content"-->
            <!--        android:layout_marginTop="15dp"-->
            <!--        android:text="To"-->
            <!--        android:textAlignment="center"-->
            <!--        android:textColor="@color/black"-->
            <!--        android:textSize="16dp"-->
            <!--        android:textStyle="bold"-->
            <!--        android:gravity="center_horizontal" />-->
