            <!--        android:id="@+id/spinto"-->
            <!--        android:layout_width="250dp"-->
            <!--        android:layout_gravity="center"-->
            <!--        android:textAlignment="center"-->
            <!--        android:background="@drawable/editbox"-->
            <!--        android:layout_marginTop="15dp"-->
            <!--        android:layout_height="wrap_content" />-->



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewfullrecipt"
                android:paddingTop="20dp"
                android:layout_width="409dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
                        <TextView
                            android:id="@+id/Totalscan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Total Scan"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:gravity="center_horizontal" />
                        <TextView
                            android:id="@+id/Totalscanvalue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:gravity="center_horizontal" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintSigned"
                android:layout_width="225dp"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/border"
                android:layout_height="280dp">
                <ImageView
                    android:id="@+id/signedImg"
                    android:layout_width="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_height="200dp">
                </ImageView>
                <ImageView
                    android:id="@+id/closeImg"
                    android:layout_width="50dp"
                    android:src="@drawable/remove"
                    android:layout_margin="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="50dp">
                </ImageView>


            </androidx.constraintlayout.widget.ConstraintLayout>


            <Button
                android:id="@+id/uploadSign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_corner"
                android:text="Upload Customer Sign"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/godownfullreciptMainPost"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_corner"
                android:text="Submit"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="20dp" />


            <Button
                android:id="@+id/godownfullreciptprintbtn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_corner"
                android:text="Print"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

            <!--    <ImageView-->
            <!--        android:id="@+id/empty_imageview"-->
            <!--        android:layout_width="wrap_content"-->
            <!--        android:layout_height="wrap_content"-->
