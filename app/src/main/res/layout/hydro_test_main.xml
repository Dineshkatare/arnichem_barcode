<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <!-- ScrollView to Contain Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/owner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Owner:"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        android:textSize="16dp"
        android:textStyle="bold"
        android:gravity="center_horizontal" />
    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/spinnerDistributor"
        android:layout_width="0dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/owner"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintBottom_toBottomOf="@id/owner"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:background="@drawable/editbox"
        android:layout_height="wrap_content" />




    <TextView
        android:id="@+id/enterdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/owner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Select Manufacture Date:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:id="@+id/date_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterdate"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/mm"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="MM"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_marginRight="45dp"
            android:textStyle="bold"
            android:gravity="center_horizontal" />
        <TextView
            android:id="@+id/yyyy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="45dp"
            android:text="YYYY"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            android:gravity="center_horizontal" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/date_value_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@+id/date_ll"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/spinmm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="1">

        </Spinner>
        <Spinner
            android:id="@+id/spinyyyy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="1">

        </Spinner>
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/serialnumber"
        android:layout_width="0dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="Mfg Serial No:"
        android:textAlignment="center"
        android:layout_weight="1"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/cylinderid"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/edserialnumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/editbox"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/serialnumber"
        app:layout_constraintStart_toEndOf="@+id/serialnumber"
        app:layout_constraintTop_toTopOf="@id/serialnumber" />

    <TextView
        android:id="@+id/cylinderid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Owner Cylinder No:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:paddingLeft="40dp"
        android:layout_marginTop="20dp"
        android:paddingRight="40dp"
        android:layout_weight="1"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/date_value_ll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        android:gravity="center_horizontal" />

    <AutoCompleteTextView
        android:id="@+id/edcylinderid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:inputType="number
"
        android:layout_weight="1"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@id/cylinderid"
        app:layout_constraintBottom_toBottomOf="@id/cylinderid"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/editbox" />
    <AutoCompleteTextView
        android:id="@+id/cylindernumber1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:inputType="text"
        android:layout_weight="1"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@id/cylinderid"
        app:layout_constraintBottom_toBottomOf="@id/cylinderid"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/editbox" />


    <TextView
        android:id="@+id/manufacturer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Manufacturer Name:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textSize="16dp"
        android:layout_weight="1"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/serialnumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/manufacturerval"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:inputType="text"
        android:layout_weight="1"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@id/manufacturer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/manufacturer"
        android:background="@drawable/editbox" />

    <TextView
        android:id="@+id/gastype"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Gas Type:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_weight="1"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/manufacturer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        android:gravity="center_horizontal" />

    <Spinner
        android:id="@+id/edgastype"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:inputType="text"
        android:layout_weight="1"
        app:layout_constraintTop_toTopOf="@id/gastype"
        app:layout_constraintBottom_toBottomOf="@id/gastype"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/editbox" />

    <TextView
        android:id="@+id/waterCapcity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Water Capacity:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        app:layout_goneMarginTop="20dp"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tarewt"
        app:layout_constraintEnd_toEndOf="@id/guideline"
        android:layout_weight="1"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/waterCapcityEdt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@id/waterCapcity"
        app:layout_constraintBottom_toBottomOf="@id/waterCapcity"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline"
        android:layout_weight="1"
        android:background="@drawable/editbox" />

    <TextView
        android:id="@+id/tarewt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Tare Weight (kg):"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/gastype"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        android:layout_weight="1"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/edtarewt"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/tarewt"
        app:layout_constraintTop_toTopOf="@id/tarewt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline"
        android:inputType="numberDecimal"
        android:background="@drawable/editbox" />


    <TextView
        android:id="@+id/actualwt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Actual Weight (kg):"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:paddingLeft="40dp"
        android:layout_weight="1"
        android:paddingRight="40dp"
        app:layout_constraintTop_toBottomOf="@id/waterCapcity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        android:textSize="16dp"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/edactualwt"
        android:layout_width="0dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/actualwt"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintBottom_toBottomOf="@id/actualwt"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:inputType="numberDecimal"
        android:background="@drawable/editbox" />


    <TextView
        android:id="@+id/internal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Internal:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textSize="16dp"
        android:layout_weight="1"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/edactualwt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        android:gravity="center_horizontal" />
    <Spinner
        android:id="@+id/spininternal"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/internal"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintBottom_toBottomOf="@id/internal"
        android:textAlignment="center"
        android:background="@drawable/editbox" />



    <TextView
        android:id="@+id/c1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="C1 (ml):"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/internal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        android:textStyle="bold"
        android:gravity="center" />

    <EditText
        android:id="@+id/edc1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/c1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/c1"
        app:layout_constraintStart_toEndOf="@id/guideline"
        android:inputType="number|numberDecimal"
        android:background="@drawable/editbox" />

    <TextView
        android:id="@+id/c2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="C2 (ml):"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        app:layout_constraintTop_toBottomOf="@id/c1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        android:textSize="16dp"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/edc2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/c2"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintBottom_toBottomOf="@id/c2"
        android:inputType="number|numberDecimal"
        android:background="@drawable/editbox" />
    <TextView
        android:id="@+id/c3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="C3 (ml):"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        app:layout_constraintTop_toBottomOf="@id/c2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        android:textSize="16dp"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/edc3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/c3"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintBottom_toBottomOf="@id/c3"
        android:inputType="number|numberDecimal"
        android:background="@drawable/editbox" />
    <TextView
        android:id="@+id/weight_of_cylinder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Weight of cylinder with water"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/c3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        android:textSize="16dp"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/weight_of_cylinder_val"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/weight_of_cylinder"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintBottom_toBottomOf="@id/weight_of_cylinder"
        android:inputType="number|numberDecimal"
        android:background="@drawable/editbox" />




    <Button
        android:id="@+id/savebutton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/c3"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="Save" />

</androidx.constraintlayout.widget.ConstraintLayout>
        <!-- Your Content Goes Here -->
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>